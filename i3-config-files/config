# Launch favorite apps ; emacs key binding style
set $mode_launch Launch['f'irefox, 'v'im, 't'elegram, 'x'fe, 'u'get]
mode "$mode_launch" {
        # f , firefox
        bindsym f exec firefox, mode "default"
        # v , vim (in termite)
        bindsym v exec termite -e vim, mode "default"
        # t , telegram-desktop
        bindsym t exec telegram-desktop, mode "default"
	# x , xfe
	bindsym x exec xfe,mode "default"
	# u , uget
	bindsym u exec uget-gtk, mode "default"
        # go back to normal (if we don't launch something)
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_launch"
##############
# start , restart , kill tor.service 
set $mode_tor ['s'tart, 'r'estart, 'k'ill, 'l'og]  tor.service
mode "$mode_tor" {
	# s , start
	bindsym s exec termite -e "$HOME/.config/i3/blocklets/dialog-sudo sudo systemctl start tor.service" --class dialog-sudo, mode "default"
	# r , restart
	bindsym r exec termite -e "$HOME/.config/i3/blocklets/dialog-sudo sudo systemctl restart tor.service" --class dialog-sudo, mode "default"
	# k , kill
	bindsym k exec termite -e "$HOME/.config/i3/blocklets/dialog-sudo sudo systemctl kill tor.service" --class dialog-sudo, mode "default"
	# l , log
	bindsym l exec termite -e "tail -f /var/log/tor/log", mode "default"
	# go back to normal 
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+t mode "$mode_tor"
