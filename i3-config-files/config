# configure touchpad : require xf86-input-libinput and xinput ; find your device with : xinput list | grep Touchpad
exec --no-startup-id xinput set-prop "FTE1200:00 0B05:0201 Touchpad" "libinput Click Method Enabled" 1 0 
exec --no-startup-id xinput set-prop "FTE1200:00 0B05:0201 Touchpad" "libinput Tapping Enabled" 1 
exec --no-startup-id xinput set-prop "FTE1200:00 0B05:0201 Touchpad" "libinput Natural Scrolling Enabled" 0
exec --no-startup-id xinput set-prop "FTE1200:00 0B05:0201 Touchpad" "libinput Accel Speed" 0.2
exec --no-startup-id xinput set-prop "FTE1200:00 0B05:0201 Touchpad" "libinput Middle Emulation Enabled" 1
# Compositor manager
exec --no-startup-id compton -b
